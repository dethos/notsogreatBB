<p id="notice"><%= notice %></p>

<p>
  <strong>Topic:</strong>
  <%= @message.topic.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= raw @message.content %>
</p>

<p>
  <strong>Author:</strong>
  <% if @message.author %>
    <%= @message.author.email %>
  <% else %>
    Anonymous
  <% end %>
</p>

<%= link_to 'Edit', edit_message_path(@message) %> |
<%= link_to 'Back', topic_path(@message.topic) %>
