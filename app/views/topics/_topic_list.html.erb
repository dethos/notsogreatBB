<table class="table table-bordered table-striped" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <% if !@forum %>
      <th>Forum</th>
      <% end -%>
      <th>Messages</th>
      <% if current_user %>
      <th colspan="2"></th>
      <% end -%>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic %></td>
        <td>
          <% if topic.author %>
            <%= topic.author.email %>
          <% else %>
            Anonymous
          <% end %>
        </td>
        <% if !@forum %>
          <td><%= topic.forum.title %></td>
        <% end -%>
        <td> <%= topic.messages.count %></td>
        <% if current_user %>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
